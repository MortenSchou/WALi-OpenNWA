# Build the example applications
import os,os.path

Import('WaliDir')
Import('BuildDir')

ExampleDir = os.path.join(WaliDir,'Examples')

built = []
## ###############################
## Reach example
built += SConscript(
        os.path.join(ExampleDir,'Reach','SConscript'),
        build_dir= os.path.join(BuildDir,'Examples','Reach'),
        duplicate=0
        )


## ###############################
## GenKill examples
built += SConscript(
        os.path.join(ExampleDir,'GenKill','SConscript'),
        build_dir= os.path.join(BuildDir,'Examples','GenKill'),
        duplicate=0
        )

